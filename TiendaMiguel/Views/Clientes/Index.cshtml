@model IEnumerable<TiendaMiguel.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-between">
    <a class="btn btn-outline-primary" asp-action="Create">Crear Nuevo</a>
    <form class="form-inline" asp-action="Search" method="post">
        <div class="input-group">
            <input class="form-control" type="text" name="cedula" placeholder="Cedula">
            <div class="input-group-append">
                <input class="btn btn-outline-secondary" type="submit" value="Buscar">
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdClientes">Edit</a> 
                <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.IdClientes">Details</a> 
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdClientes">Delete</a>
            </td>
        </tr>
    }
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdClientes">Edit</a> |
                <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.IdClientes">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdClientes">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
