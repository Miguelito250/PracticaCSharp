@model TiendaMiguel.Models.Venta
@{
    ViewData["Title"] = "Create";
        
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3 style="font-family:serif">Creación de la Venta</h3>
        </div>
        <div>
            <a asp-controller="Ventas" asp-action="Index" asp-area="" class="btn btn-outline-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
                    <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z" />
                </svg>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form method="post" asp-action="Create" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label">Cedula del Cliente</label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                </div>

                <div class="form-group">
                    <input asp-for="Total" type="hidden" value="0" />
                </div>
                <hr/>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-warning">Crear Venta</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}